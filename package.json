{
  "name": "rx-marbles-design-system",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "watch:static": "npx nodemon --watch src/static generate-static-data.js",
    "gen:static": "node generate-static-data.js",
    "start": "npm run watch:static & ng serve",
    "start:ssr": "npm run watch:static & ng run rx-marble-design-system:serve-ssr",
    "build": "npm run gen:static && ng build --prod --no-progress",
    "build:dev": "npm run gen:static && ng build",
    "lint": "ng lint",
    "prettier": "pretty-quick",
    "prettier:check": "pretty-quick --check",
    "lint:fix": "ng lint --fix",
    "serve:ssr": "node dist/server/main.js",
    "build:ssr": "npm run gen:static && ng build --prod && ng run rx-marble-design-system:server:production",
    "prerender": "npm run gen:static && ng run rx-marble-design-system:prerender --routesFile routes.txt"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.0.5",
    "@angular/cdk": "~11.0.3",
    "@angular/common": "~11.0.5",
    "@angular/compiler": "~11.0.5",
    "@angular/core": "~11.0.5",
    "@angular/forms": "~11.0.5",
    "@angular/material": "^11.0.3",
    "@angular/platform-browser": "~11.0.5",
    "@angular/platform-browser-dynamic": "~11.0.5",
    "@angular/platform-server": "~11.0.5",
    "@angular/router": "~11.0.5",
    "@nguniversal/express-engine": "^11.0.1",
    "express": "^4.17.1",
    "gsap": "^3.5.1",
    "ngx-markdown": "^11.0.1",
    "rxjs": "^6.6.3",
    "tslib": "^2.0.0",
    "zone.js": "^0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.5",
    "@angular/cli": "~11.0.4",
    "@angular/compiler-cli": "~11.0.5",
    "@angular/language-service": "~11.0.5",
    "@nguniversal/builders": "^11.0.1",
    "@types/express": "^4.17.9",
    "@types/gsap": "^1.20.2",
    "@types/node": "^14.14.13",
    "codelyzer": "^6.0.0",
    "husky": "^4.3.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-node": "^9.1.1",
    "tslint": "~6.1.0",
    "typescript": "~4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  }
}
